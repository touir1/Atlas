@model Atlas_frontend.Models.MissionModel

@{
    ViewData["Title"] = "Details de la mission";
}

    <div class="card">
        <div class="card-header" style="text-align:center">
            Détails d'une mission
        </div>
        <div class="card-body">

            <dl class="row">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Type)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Type)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Date)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Duree)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Duree)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Lieu)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Lieu)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Projet)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Projet.Titre)
                </dd>
            </dl>
        </div>
        
        <div class="form-group" style="text-align:center">
            @Html.ActionLink("Modifier", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })

        </div>
        <br />
        </div>
<br />
<div>
        <a asp-action="Index">Retour à la liste des missions</a>
    </div>