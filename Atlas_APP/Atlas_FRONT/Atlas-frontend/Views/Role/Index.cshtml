@model IEnumerable<Atlas_frontend.Models.RoleModel>

@{
    ViewData["Title"] = "Role list";
}

<h1>Liste des rôles</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-outline-success">Créer un nouveau rôle</a>
</p>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Libelle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Libelle)
                </td>
                <td>
                    @if (!item.Libelle.Trim().ToLower().Equals("administrator"))
                    {
                        @Html.ActionLink("Supprimer", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-outline-danger" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
