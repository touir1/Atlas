@model IEnumerable<Atlas_frontend.Models.CompteModel>

@{
    ViewData["Title"] = "Compte list";
}

<h1>Liste des comptes</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-outline-success">Créer nouveau compte</a>
</p>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>

            <th>
                # Compte
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                # User
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <th>
                @if (item.User != null) {
                    @Html.DisplayFor(modelItem => item.User.Id)
                }
            </th>
            <th>
                @if (item.User != null)
                {
                    @Html.DisplayFor(modelItem => item.User.Nom)
                }
            </th>
            <th>
                @if (item.User != null)
                {
                    @Html.DisplayFor(modelItem => item.User.Prenom)
                }
            </th>
            <th>
                @if (item.User != null)
                {
                    @Html.DisplayFor(modelItem => item.User.Email)
                }
            </th>
            <th>
                @if (item.Roles != null)
                {
                    @foreach (RoleModel role in item.Roles)
                    {
                        <span class="badge badge-pill badge-success">@role.Libelle</span>
                    }
                }
            </th>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-outline-warning" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-outline-info" }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-outline-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
