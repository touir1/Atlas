@model IEnumerable<Atlas_frontend.Models.UserModel>

@{
    ViewData["Title"] = "Users list";
}

<h1>Liste d'utilisateurs</h1>

<p>
    <a asp-action="Create">Création d'un nouveau utilisateur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poste)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateNaissance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateContrat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poste)
            </td>
            <td>
                @*
        @Html.DisplayFor(modelItem => item.Image)
                *@
                @if(item.Image != null && !"".Equals(item.Image.Trim())) { 
                    <img src="~/images/profiles/@item.Image"
                         class="rounded-circle"
                         height="40" width="40"
                         asp-append-version="true" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateNaissance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateContrat)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new {  id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Supprimer", "Delete", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
