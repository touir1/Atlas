@model Atlas_frontend.Models.UserModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details utilisateur</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-12">
            @if (Model.Image != null && !"".Equals(Model.Image.Trim()))
            {
                <img src="~/images/profiles/@Model.Image"
                     height="80" width="80"
                     asp-append-version="true" />
            }
        </dt>
        <dt class = "col-sm-2">
            #
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prenom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Poste)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Poste)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateNaissance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateNaissance)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateContrat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateContrat)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-sm btn-warning" })
    <hr />
    <a asp-action="Index">Retour à la liste d'utilisateurs</a>
</div>
